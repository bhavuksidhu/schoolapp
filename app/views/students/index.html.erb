<% content_for :title, "All Students" %>
<div class="main-wraper">
	<div class="inner">
		 <%= search_form_for @search do |f| %>
        <div class="field form-group">
          <%= f.label :first_name_start, "Search Students" %>
          <%= f.text_field :first_name_start , class: 'form-control cstm' , placeholder:"Search..." %>
          <div class="actions">
            <%= f.submit "Search" %>
          </div>
        </div>
      <% end %>
		<section class="student-profile">
			 <div class="table-responsive">
			  <table class="table table-hover">
			    <thead>
			      <tr>
			        <th>Name</th>
			        <th>Class</th>
			        <th>Joined</th>
			        <th>View</th>
			      </tr>
			    </thead>
			    <tbody>
            <%= will_paginate @students %>
			    	<% @students.each do |student| %>
				      <tr>
				        <td><%= student.name %></td>
				        <td><%= student.student_detail.try(:standard).try(:title) %></td>
				        <td><%= student.student_detail.try(:admission_date) %></td>
				        <td><%=link_to 'View details', student_path(student.id)%>  </td>
				      </tr>
			      <% end %>
			    </tbody>
			  </table>
			</div>
		</section>
	</div>
</div>

