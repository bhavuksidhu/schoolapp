<div class="form-create-student">
  <div class="inner-form">
      <div class="col-sm-7 start_form">
        <h1>Sign up Admin</h1>
        <%= form_for(@admin)  do |f| %>

          <div class="form-group">
            <label for="Full Name">Full Name*</label>
            <%= f.text_field :full_name, autofocus: true, autocomplete: "full_name" , placeholder:"Full Name" , class: "form-control" %>
          </div>

        
          <div class="form-group">
            <label for="email">Email*</label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" , placeholder:"Email" , class: "form-control" %>
          </div>

          <div class="form-group">
            <label for="password">Password*</label>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum) </em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password" , placeholder:"Password" , class: "form-control" %>
          </div>

          <div class="form-group">
            <label for="Password confirmation">Password confirmation*</label>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" , placeholder:"Password confirmation" , class: "form-control" %>
          </div>


          <div class="form-group">
            <%= f.submit "Sign up" , class: "form-control bttn" %>
          </div>

        <% end %>
      </div>
  </div>
</div>


<%#= render "devise/shared/li" %>
<script type="text/javascript">
  $("#new_admin").validate({
      rules: {
        "admin[full_name]": {required: true},
        "admin[email]": {required: true, email: true},
        "admin[password]": {required: true, minlength: 6},
        "admin[password_confirmation]": {equalTo: "#admin_password", minlength: 6}
      },
      messages: {
        "admin[full_name]": {required: "Please enter your fullname"},
        "admin[email]": {required: "Please provide a email"},
        "admin[password]": {required: "Please enter a valid password"},
        "admin[password_confirmation]": {required: "Please enter correct password"}
      }
    });
  
</script>






