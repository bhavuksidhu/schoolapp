<%= form_for @admin, url: users_path, method: :put  do |f| %>
  <%= f.label :current_password %>
  <%= f.password_field :current_password, :autocomplete => "off",  placeholder: "Current password" %><br>
  <%= f.label :password %><br>
  <%= f.password_field :password, :autocomplete => "off", placeholder: "Enter new password" %><br>
   <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, placeholder: "Confirm new password" %><br>
  <%= f.submit "Submit" %> 
<% end %>