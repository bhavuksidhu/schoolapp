<%= form_for @admin, url: users_path, method: :put  do |f| %>
 <%= f.label :current_password %>
<div class="form-group pass_show"> 
  <%= f.password_field :current_password, :autocomplete => "off", class: "form-control", placeholder: "Current password" %>
</div> 
  <%= f.label :password %>
  <div class="form-group pass_show"> 
    <%= f.password_field :password, :autocomplete => "off", class: "form-control", placeholder: "Enter new password" %>
  </div>
   <%= f.label :password_confirmation %>
  <div class="form-group pass_show"> 
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm new password" %>
  </div>
  <div class="form-group"> 
   <%= f.submit "Submit",  class: "btn btn-primary"%> 
  </div>
<% end %>            
<script type="text/javascript">
  $("#new_admin").validate({
    rules: {
      "admin[current_password]": {required: true},
      "admin[password]": {required: true, minlength: 6},
      "admin[password_confirmation]": {equalTo: "#admin_password", minlength: 6}
    },
    messages: {
      "admin[current_password]": {required: "*current password can't be blank!"},
      "admin[password]": {required: "*password can't be blank!"},
      "admin[password_confirmation]": {required: "Please enter correct password"}       
    }
  });

</script>