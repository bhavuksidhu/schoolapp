<%= form_for @admin, url: users_path, method: :put  do |f| %>
  <%= f.label :current_password %>
  <%= f.password_field :current_password, :autocomplete => "off",  placeholder: "Current password" %><br>
  <%= f.label :password %><br>
  <%= f.password_field :password, :autocomplete => "off", placeholder: "Enter new password" %><br>
   <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, placeholder: "Confirm new password" %><br>
  <%= f.submit "Submit"  %> 
<% end %>

<script type="text/javascript">
  $("#new_admin").validate({
    rules: {
      "admin[current_password]": {required: true},
      "admin[password]": {required: true, minlength: 6},
      "admin[password_confirmation]": {equalTo: "#admin_password", minlength: 6}
    },
    messages: {
      "admin[current_password]": {required: "*current password can't be blank!"},
      "admin[password]": {required: "*password can't be blank!"},
      "admin[password_confirmation]": {required: "Please enter correct password"}       
    }
  });

</script>